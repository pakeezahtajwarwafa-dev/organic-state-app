<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Rank Badge -->
    <TextView
        android:id="@+id/tvProductRank"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/circle_badge_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organic Tomatoes"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvProductUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124 units sold"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvProductRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="à§³5,580"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:layout_marginStart="12dp" />

</LinearLayout>