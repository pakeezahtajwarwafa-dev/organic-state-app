<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:gravity="start">

    <!-- AI Icon -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_ai_bot"
        android:background="@drawable/bg_ai_icon"
        android:padding="6dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="AI" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="48dp"
        android:maxWidth="280dp">

        <!-- Message Bubble -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI response here"
            android:textSize="15sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/bg_message_ai"
            android:padding="12dp"
            android:lineSpacingExtra="2dp" />

        <!-- Typing Indicator -->
        <LinearLayout
            android:id="@+id/typingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_message_ai"
            android:padding="16dp"
            android:visibility="gone">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_typing_dot"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_typing_dot"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_typing_dot" />
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>